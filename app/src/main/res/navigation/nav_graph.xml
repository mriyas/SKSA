<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.suraksha.android.view.fragment.LoginFragment"
        android:label="loginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/goToLabsHomeScreen"
            app:destination="@id/labsHomeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/goToPharmacy"
            app:destination="@id/pharmacyDashboardFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />


    </fragment>

    <fragment
        android:id="@+id/labsHomeFragment"
        android:name="com.suraksha.android.view.fragment.lab.LabHomeFragment"
        android:label="labsHomeFragment"
        tools:layout="@layout/fragment_lab_home">


    </fragment>

    <fragment
        android:id="@+id/pharmacyDashboardFragment"
        android:name="com.suraksha.android.view.fragment.pharmacy.PharmacyDashboradFragment"
        android:label="pharmacyDashboardFragment"
        tools:layout="@layout/fragment_pharmacy_dashboard">


    </fragment>

</navigation>